@{
    ViewData["Title"] = "Pipelines";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="h2">Build & Deploy Pipelines</h1>
    <div>
        <button type="button" class="btn btn-success" data-bs-toggle="modal" data-bs-target="#createPipelineModal">
            <i class="bi bi-plus-circle"></i> Create Pipeline
        </button>
        <a href="/api/pipelines" class="btn btn-outline-info" target="_blank">
            <i class="bi bi-code"></i> API
        </a>
    </div>
</div>

<!-- Pipeline Filters -->
<div class="card mb-4">
    <div class="card-body">
        <form id="pipelineFilters" class="row g-3">
            <div class="col-md-3">
                <label for="serviceFilter" class="form-label">Service</label>
                <select id="serviceFilter" class="form-select">
                    <option value="">All Services</option>
                </select>
            </div>
            <div class="col-md-3">
                <label for="statusFilter" class="form-label">Status</label>
                <select id="statusFilter" class="form-select">
                    <option value="">All Statuses</option>
                    <option value="Success">Success</option>
                    <option value="Failed">Failed</option>
                    <option value="Running">Running</option>
                    <option value="Queued">Queued</option>
                </select>
            </div>
            <div class="col-md-3">
                <label for="searchFilter" class="form-label">Search</label>
                <input type="text" id="searchFilter" class="form-control" placeholder="Search pipelines...">
            </div>
            <div class="col-md-3 d-flex align-items-end">
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" id="autoRefresh" checked>
                    <label class="form-check-label" for="autoRefresh">
                        Auto-refresh
                    </label>
                </div>
            </div>
        </form>
    </div>
</div>

<!-- Pipelines Table -->
<div class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h6 class="card-title mb-0">Pipelines</h6>
        <div class="btn-group btn-group-sm" role="group">
            <button type="button" class="btn btn-outline-secondary" id="refreshBtn">
                <i class="bi bi-arrow-clockwise"></i> Refresh
            </button>
            <button type="button" class="btn btn-outline-primary" id="runAllBtn">
                <i class="bi bi-play-fill"></i> Run All
            </button>
        </div>
    </div>
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover mb-0" id="pipelinesTable">
                <thead class="table-light">
                    <tr>
                        <th>Pipeline</th>
                        <th>Service</th>
                        <th>Last Execution</th>
                        <th>Status</th>
                        <th>Duration</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody id="pipelinesTableBody">
                    <!-- Pipeline rows will be inserted here -->
                </tbody>
            </table>
        </div>
        
        <!-- Loading state -->
        <div id="loadingSpinner" class="text-center py-5">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">Loading pipelines...</span>
            </div>
        </div>
        
        <!-- Empty state -->
        <div id="emptyState" class="text-center py-5" style="display: none;">
            <div class="mb-3">
                <i class="bi bi-gear display-1 text-muted"></i>
            </div>
            <h5 class="text-muted">No pipelines found</h5>
            <p class="text-muted">Create your first pipeline to automate build and deployment.</p>
            <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#createPipelineModal">
                Create Your First Pipeline
            </button>
        </div>
    </div>
</div>

<!-- Create Pipeline Modal -->
<div class="modal fade" id="createPipelineModal" tabindex="-1" aria-labelledby="createPipelineModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-xl">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="createPipelineModalLabel">Create New Pipeline</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form id="createPipelineForm">
                <div class="modal-body">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="pipelineName" class="form-label">Pipeline Name *</label>
                                <input type="text" class="form-control" id="pipelineName" name="name" required>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="pipelineService" class="form-label">Target Service *</label>
                                <select class="form-select" id="pipelineService" name="serviceId" required>
                                    <option value="">Select service...</option>
                                </select>
                            </div>
                        </div>
                    </div>
                    <div class="mb-3">
                        <label for="pipelineDescription" class="form-label">Description</label>
                        <textarea class="form-control" id="pipelineDescription" name="description" rows="2"></textarea>
                    </div>
                    
                    <!-- Pipeline Stages -->
                    <div class="mb-4">
                        <div class="d-flex justify-content-between align-items-center mb-3">
                            <h6 class="mb-0">Pipeline Stages</h6>
                            <button type="button" class="btn btn-sm btn-outline-primary" id="addStageBtn">
                                <i class="bi bi-plus"></i> Add Stage
                            </button>
                        </div>
                        <div id="pipelineStages">
                            <!-- Pipeline stages will be added here -->
                        </div>
                    </div>
                    
                    <!-- Triggers -->
                    <div class="mb-3">
                        <h6>Triggers</h6>
                        <div class="row">
                            <div class="col-md-4">
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" id="manualTrigger" checked>
                                    <label class="form-check-label" for="manualTrigger">
                                        Manual
                                    </label>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" id="diagramChangeTrigger">
                                    <label class="form-check-label" for="diagramChangeTrigger">
                                        On Diagram Change
                                    </label>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" id="repoChangeTrigger">
                                    <label class="form-check-label" for="repoChangeTrigger">
                                        On Repository Change
                                    </label>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-success">Create Pipeline</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Pipeline Execution Modal -->
<div class="modal fade" id="executionModal" tabindex="-1" aria-labelledby="executionModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-xl">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="executionModalLabel">Pipeline Execution</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-md-8">
                        <!-- Execution Steps -->
                        <div class="mb-4">
                            <h6>Execution Progress</h6>
                            <div id="executionSteps">
                                <!-- Execution steps will be displayed here -->
                            </div>
                        </div>
                        
                        <!-- Execution Logs -->
                        <div>
                            <h6>Logs</h6>
                            <div class="bg-dark text-light p-3 rounded" style="height: 300px; overflow-y: auto; font-family: 'Courier New', monospace;">
                                <div id="executionLogs">
                                    <!-- Logs will be streamed here -->
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <!-- Execution Details -->
                        <div class="card">
                            <div class="card-header">
                                <h6 class="card-title mb-0">Execution Details</h6>
                            </div>
                            <div class="card-body" id="executionDetails">
                                <!-- Execution details will be displayed here -->
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-outline-danger" id="cancelExecutionBtn" style="display: none;">
                    Cancel Execution
                </button>
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

<!-- Stage Template (hidden) -->
<template id="stageTemplate">
    <div class="card mb-3 pipeline-stage">
        <div class="card-header d-flex justify-content-between align-items-center">
            <div class="d-flex align-items-center">
                <span class="stage-number badge bg-primary me-2">1</span>
                <input type="text" class="form-control form-control-sm stage-name" placeholder="Stage name" required>
            </div>
            <div>
                <select class="form-select form-select-sm stage-type me-2">
                    <option value="Build">Build</option>
                    <option value="Test">Test</option>
                    <option value="DockerBuild">Docker Build</option>
                    <option value="DockerDeploy">Docker Deploy</option>
                    <option value="Custom">Custom</option>
                </select>
                <button type="button" class="btn btn-sm btn-outline-danger remove-stage-btn">
                    <i class="bi bi-trash"></i>
                </button>
            </div>
        </div>
        <div class="card-body">
            <div class="mb-3">
                <label class="form-label">Commands</label>
                <textarea class="form-control stage-commands" rows="3" placeholder="Enter commands, one per line"></textarea>
            </div>
            <div class="stage-docker-config" style="display: none;">
                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label class="form-label">Docker File</label>
                            <input type="text" class="form-control stage-dockerfile" placeholder="Dockerfile">
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label class="form-label">Image Name</label>
                            <input type="text" class="form-control stage-image-name" placeholder="my-app">
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</template>

<!-- Toast Container -->
<div class="toast-container position-fixed bottom-0 end-0 p-3">
    <div id="successToast" class="toast align-items-center text-white bg-success border-0" role="alert">
        <div class="d-flex">
            <div class="toast-body">Operation completed successfully!</div>
            <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast"></button>
        </div>
    </div>
    <div id="errorToast" class="toast align-items-center text-white bg-danger border-0" role="alert">
        <div class="d-flex">
            <div class="toast-body">
                <span id="errorMessage">An error occurred.</span>
            </div>
            <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast"></button>
        </div>
    </div>
</div>

@section Scripts {
    <script type="module" src="~/js/pipeline-index.js"></script>
    <script src="~/lib/signalr/signalr.min.js"></script>
}