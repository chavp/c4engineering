                <a href="@Url.Action("Pipelines", "Home")" class="btn btn-primary">View Pipelines</a>
            </div>
        </div>
    </div>
    
    <div class="col-md-6 col-lg-3 mb-4">
        <div class="card h-100">
            <div class="card-body text-center">
                <h5 class="card-title">Deployments</h5>
                <p class="card-text">Monitor and manage Docker Desktop deployments</p>
                <a href="@Url.Action("Deployments", "Home")" class="btn btn-primary">View Deployments</a>
            </div>
        </div>
    </div>
</div>

