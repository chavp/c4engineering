@{
    ViewData["Title"] = "Diagram Editor";
}

<!-- Editor Header -->
<div class="d-flex justify-content-between align-items-center mb-3">
    <div class="d-flex align-items-center">
        <a href="@Url.Action("Index", "Architecture")" class="btn btn-outline-secondary me-3">
            <i class="bi bi-arrow-left"></i> Back
        </a>
        <div>
            <h1 class="h4 mb-0" id="diagramTitle">Untitled Diagram</h1>
            <small class="text-muted" id="diagramMeta">C4 Context Diagram</small>
        </div>
    </div>
    <div class="btn-toolbar" role="toolbar">
        <div class="btn-group me-2" role="group">
            <button type="button" class="btn btn-outline-primary" id="saveBtn">
                <i class="bi bi-save"></i> Save
            </button>
            <button type="button" class="btn btn-outline-secondary" id="exportBtn" data-bs-toggle="dropdown">
                <i class="bi bi-download"></i> Export
            </button>
            <ul class="dropdown-menu">
                <li><a class="dropdown-item" href="#" id="exportPng">Export as PNG</a></li>
                <li><a class="dropdown-item" href="#" id="exportSvg">Export as SVG</a></li>
                <li><a class="dropdown-item" href="#" id="exportPdf">Export as PDF</a></li>
            </ul>
        </div>
        <div class="btn-group me-2" role="group">
            <button type="button" class="btn btn-outline-info" id="shareBtn">
                <i class="bi bi-share"></i> Share
            </button>
            <button type="button" class="btn btn-outline-success" id="configurePipelineBtn">
                <i class="bi bi-gear"></i> Configure Pipeline
            </button>
        </div>
    </div>
</div>

<!-- Editor Workspace -->
<div class="row h-100" style="min-height: 80vh;">
    <!-- Component Palette -->
    <div class="col-md-2">
        <div class="card h-100">
            <div class="card-header">
                <h6 class="card-title mb-0">Components</h6>
            </div>
            <div class="card-body p-2" id="componentPalette">
                <div class="accordion accordion-flush" id="paletteAccordion">
                    <!-- People & Systems -->
                    <div class="accordion-item">
                        <h2 class="accordion-header">
                            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#peopleCollapse">
                                People & Systems
                            </button>
                        </h2>
                        <div id="peopleCollapse" class="accordion-collapse collapse" data-bs-parent="#paletteAccordion">
                            <div class="accordion-body p-2">
                                <div class="palette-item" data-type="person" draggable="true">
                                    <i class="bi bi-person-circle"></i> Person
                                </div>
                                <div class="palette-item" data-type="system" draggable="true">
                                    <i class="bi bi-box-seam"></i> Software System
                                </div>
                                <div class="palette-item" data-type="external-system" draggable="true">
                                    <i class="bi bi-cloud"></i> External System
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <!-- Containers -->
                    <div class="accordion-item">
                        <h2 class="accordion-header">
                            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#containersCollapse">
                                Containers
                            </button>
                        </h2>
                        <div id="containersCollapse" class="accordion-collapse collapse" data-bs-parent="#paletteAccordion">
                            <div class="accordion-body p-2">
                                <div class="palette-item" data-type="web-app" draggable="true">
                                    <i class="bi bi-browser-chrome"></i> Web Application
                                </div>
                                <div class="palette-item" data-type="mobile-app" draggable="true">
                                    <i class="bi bi-phone"></i> Mobile App
                                </div>
                                <div class="palette-item" data-type="api" draggable="true">
                                    <i class="bi bi-cloud-arrow-up"></i> API
                                </div>
                                <div class="palette-item" data-type="database" draggable="true">
                                    <i class="bi bi-database"></i> Database
                                </div>
                                <div class="palette-item" data-type="message-queue" draggable="true">
                                    <i class="bi bi-envelope-plus"></i> Message Queue
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <!-- Components -->
                    <div class="accordion-item">
                        <h2 class="accordion-header">
                            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#componentsCollapse">
                                Components
                            </button>
                        </h2>
                        <div id="componentsCollapse" class="accordion-collapse collapse" data-bs-parent="#paletteAccordion">
                            <div class="accordion-body p-2">
                                <div class="palette-item" data-type="controller" draggable="true">
                                    <i class="bi bi-cpu"></i> Controller
                                </div>
                                <div class="palette-item" data-type="service" draggable="true">
                                    <i class="bi bi-gear"></i> Service
                                </div>
                                <div class="palette-item" data-type="repository" draggable="true">
                                    <i class="bi bi-archive"></i> Repository
                                </div>
                                <div class="palette-item" data-type="component" draggable="true">
                                    <i class="bi bi-puzzle"></i> Component
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <!-- Diagram Canvas -->
    <div class="col-md-8">
        <div class="card h-100">
            <div class="card-header d-flex justify-content-between align-items-center">
                <div class="btn-group btn-group-sm" role="group">
                    <button type="button" class="btn btn-outline-secondary" id="zoomOut">
                        <i class="bi bi-zoom-out"></i>
                    </button>
                    <button type="button" class="btn btn-outline-secondary" id="zoomReset">100%</button>
                    <button type="button" class="btn btn-outline-secondary" id="zoomIn">
                        <i class="bi bi-zoom-in"></i>
                    </button>
                </div>
                <div class="form-check form-switch">
                    <input class="form-check-input" type="checkbox" id="snapToGrid" checked>
                    <label class="form-check-label" for="snapToGrid">Snap to Grid</label>
                </div>
            </div>
            <div class="card-body p-0 position-relative" id="diagramContainer">
                <!-- SVG will be inserted here by D3.js -->
                <div id="selectionInfo" class="position-absolute top-0 start-0 m-2 p-2 bg-light border rounded" style="display: none;">
                    <small class="text-muted">Selected: <span id="selectedElementName"></span></small>
                </div>
            </div>
        </div>
    </div>
    
    <!-- Properties Panel -->
    <div class="col-md-2">
        <div class="card h-100">
            <div class="card-header">
                <h6 class="card-title mb-0">Properties</h6>
            </div>
            <div class="card-body" id="propertiesPanel">
                <div id="noSelection" class="text-center text-muted py-4">
                    <i class="bi bi-cursor display-4"></i>
                    <p class="mt-2">Select an element to edit properties</p>
                </div>
                
                <div id="elementProperties" style="display: none;">
                    <form id="propertiesForm">
                        <div class="mb-3">
                            <label for="elementName" class="form-label">Name</label>
                            <input type="text" class="form-control form-control-sm" id="elementName">
                        </div>
                        <div class="mb-3">
                            <label for="elementDescription" class="form-label">Description</label>
                            <textarea class="form-control form-control-sm" id="elementDescription" rows="3"></textarea>
                        </div>
                        <div class="mb-3">
                            <label for="elementTechnology" class="form-label">Technology</label>
                            <input type="text" class="form-control form-control-sm" id="elementTechnology">
                        </div>
                        <div class="mb-3">
                            <label for="elementColor" class="form-label">Color</label>
                            <input type="color" class="form-control form-control-color form-control-sm" id="elementColor">
                        </div>
                        <div class="mb-3" id="containerConfig" style="display: none;">
                            <label class="form-label">Container Options</label>
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" id="enablePipeline">
                                <label class="form-check-label" for="enablePipeline">
                                    Enable Pipeline
                                </label>
                            </div>
                        </div>
                        <button type="button" class="btn btn-danger btn-sm w-100" id="deleteElement">
                            <i class="bi bi-trash"></i> Delete Element
                        </button>
                    </form>
                </div>

                <div id="relationshipProperties" style="display: none;">
                    <form id="relationshipForm">
                        <div class="mb-3">
                            <label for="relationshipDescription" class="form-label">Description</label>
                            <input type="text" class="form-control form-control-sm" id="relationshipDescription" placeholder="Uses, Calls, Sends data to">
                        </div>
                        <div class="mb-3">
                            <label for="relationshipTechnology" class="form-label">Technology</label>
                            <input type="text" class="form-control form-control-sm" id="relationshipTechnology" placeholder="HTTPS, gRPC, Message Queue">
                        </div>
                        <div class="mb-3">
                            <label for="relationshipType" class="form-label">Type</label>
                            <select class="form-select form-select-sm" id="relationshipType">
                                <option value="uses">Uses</option>
                                <option value="calls">Calls</option>
                                <option value="sends">Sends to</option>
                                <option value="includes">Includes</option>
                                <option value="extends">Extends</option>
                                <option value="depends">Depends on</option>
                            </select>
                        </div>
                        
                        <!-- Connection Type -->
                        <div class="mb-3">
                            <label for="relationshipConnectionType" class="form-label">Connection</label>
                            <select class="form-select form-select-sm" id="relationshipConnectionType">
                                <option value="curved">Curved</option>
                                <option value="straight">Straight</option>
                                <option value="orthogonal">Orthogonal</option>
                                <option value="bezier">Bezier</option>
                                <option value="stepped">Stepped</option>
                                <option value="arc">Arc</option>
                            </select>
                        </div>
                        
                        <!-- Visual Style -->
                        <div class="mb-3">
                            <label class="form-label">Visual Style</label>
                            <div class="row">
                                <div class="col-6">
                                    <label for="relationshipColor" class="form-label small">Color</label>
                                    <input type="color" class="form-control form-control-color form-control-sm" id="relationshipColor" value="#6c757d">
                                </div>
                                <div class="col-6">
                                    <label for="relationshipWidth" class="form-label small">Width</label>
                                    <input type="range" class="form-range" id="relationshipWidth" min="1" max="8" value="2">
                                </div>
                            </div>
                        </div>
                        
                        <div class="row mb-3">
                            <div class="col-6">
                                <label for="relationshipLineStyle" class="form-label small">Line Style</label>
                                <select class="form-select form-select-sm" id="relationshipLineStyle">
                                    <option value="solid">Solid</option>
                                    <option value="dashed">Dashed</option>
                                    <option value="dotted">Dotted</option>
                                    <option value="dashdot">Dash-Dot</option>
                                    <option value="longdash">Long Dash</option>
                                </select>
                            </div>
                            <div class="col-6">
                                <label for="relationshipPattern" class="form-label small">Pattern</label>
                                <select class="form-select form-select-sm" id="relationshipPattern">
                                    <option value="none">None</option>
                                    <option value="wave">Wave</option>
                                    <option value="zigzag">Zigzag</option>
                                </select>
                            </div>
                        </div>

                        <!-- Arrows -->
                        <div class="row mb-3">
                            <div class="col-6">
                                <label for="relationshipStartArrow" class="form-label small">Start Arrow</label>
                                <select class="form-select form-select-sm" id="relationshipStartArrow">
                                    <option value="none">None</option>
                                    <option value="arrow">Arrow</option>
                                    <option value="diamond">Diamond</option>
                                    <option value="circle">Circle</option>
                                    <option value="square">Square</option>
                                </select>
                            </div>
                            <div class="col-6">
                                <label for="relationshipEndArrow" class="form-label small">End Arrow</label>
                                <select class="form-select form-select-sm" id="relationshipEndArrow">
                                    <option value="arrow">Arrow</option>
                                    <option value="diamond">Diamond</option>
                                    <option value="circle">Circle</option>
                                    <option value="square">Square</option>
                                    <option value="double">Double</option>
                                    <option value="none">None</option>
                                </select>
                            </div>
                        </div>

                        <!-- Connection Points -->
                        <div class="row mb-3">
                            <div class="col-6">
                                <label for="relationshipSourceAnchor" class="form-label small">Source</label>
                                <select class="form-select form-select-sm" id="relationshipSourceAnchor">
                                    <option value="auto">Auto</option>
                                    <option value="top">Top</option>
                                    <option value="right">Right</option>
                                    <option value="bottom">Bottom</option>
                                    <option value="left">Left</option>
                                </select>
                            </div>
                            <div class="col-6">
                                <label for="relationshipTargetAnchor" class="form-label small">Target</label>
                                <select class="form-select form-select-sm" id="relationshipTargetAnchor">
                                    <option value="auto">Auto</option>
                                    <option value="top">Top</option>
                                    <option value="right">Right</option>
                                    <option value="bottom">Bottom</option>
                                    <option value="left">Left</option>
                                </select>
                            </div>
                        </div>

                        <button type="button" class="btn btn-danger btn-sm w-100" id="deleteRelationship">
                            <i class="bi bi-trash"></i> Delete Relationship
                        </button>
                    </form>
                </div>

                <!-- Relationship Management -->
                <div id="relationshipManager" class="mt-4">
                    <div class="d-flex justify-content-between align-items-center mb-2">
                        <h6 class="mb-0">Relationships</h6>
                        <div class="btn-group btn-group-sm" role="group">
                            <button type="button" class="btn btn-outline-primary" id="addRelationshipBtn" title="Add Relationship">
                                <i class="bi bi-plus"></i>
                            </button>
                            <button type="button" class="btn btn-outline-secondary" id="connectionModeBtn" title="Connection Mode">
                                <i class="bi bi-bezier"></i>
                            </button>
                        </div>
                    </div>
                    <div id="relationshipList" class="list-group list-group-flush">
                        <div class="text-muted small text-center py-2" id="noRelationships">
                            No relationships defined
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Collaboration Status -->
<div class="position-fixed bottom-0 start-0 p-3">
    <div class="toast-container">
        <div id="collaborationStatus" class="toast" role="status" aria-live="polite" aria-atomic="true">
            <div class="toast-header">
                <i class="bi bi-people-fill text-success me-2"></i>
                <strong class="me-auto">Collaboration</strong>
                <button type="button" class="btn-close" data-bs-dismiss="toast"></button>
            </div>
            <div class="toast-body">
                <div id="activeUsers">
                    <!-- Active users will be shown here -->
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Configure Pipeline Modal -->
<div class="modal fade" id="configurePipelineModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Configure Pipeline</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <div class="alert alert-info">
                    <i class="bi bi-info-circle"></i>
                    Configure build and deployment pipeline for selected container elements.
                </div>
                <div id="pipelineConfig">
                    <!-- Pipeline configuration will be loaded here -->
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-success" id="savePipelineConfig">Save Configuration</button>
            </div>
        </div>
    </div>
</div>

<!-- Share Modal -->
<div class="modal fade" id="shareModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Share Diagram</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <div class="mb-3">
                    <label for="shareUrl" class="form-label">Share URL</label>
                    <div class="input-group">
                        <input type="text" class="form-control" id="shareUrl" readonly>
                        <button class="btn btn-outline-secondary" type="button" id="copyUrl">
                            <i class="bi bi-clipboard"></i>
                        </button>
                    </div>
                </div>
                <div class="mb-3">
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" id="allowEditing">
                        <label class="form-check-label" for="allowEditing">
                            Allow collaborative editing
                        </label>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

<!-- Add/Edit Relationship Modal -->
<div class="modal fade" id="relationshipModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="relationshipModalTitle">Add Relationship</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <form id="relationshipModalForm">
                    <div class="mb-3">
                        <label for="modalSourceElement" class="form-label">From Element</label>
                        <select class="form-select" id="modalSourceElement" required>
                            <option value="">Select source element...</option>
                        </select>
                    </div>
                    <div class="mb-3">
                        <label for="modalTargetElement" class="form-label">To Element</label>
                        <select class="form-select" id="modalTargetElement" required>
                            <option value="">Select target element...</option>
                        </select>
                    </div>
                    <div class="mb-3">
                        <label for="modalRelationshipDescription" class="form-label">Description</label>
                        <input type="text" class="form-control" id="modalRelationshipDescription" placeholder="Uses, Calls, Sends data to" required>
                    </div>
                    <div class="mb-3">
                        <label for="modalRelationshipTechnology" class="form-label">Technology</label>
                        <input type="text" class="form-control" id="modalRelationshipTechnology" placeholder="HTTPS, gRPC, Message Queue">
                    </div>
                    
                    <!-- Advanced Settings -->
                    <div class="accordion" id="relationshipAdvanced">
                        <div class="accordion-item">
                            <h2 class="accordion-header">
                                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#advancedSettings">
                                    Advanced Settings
                                </button>
                            </h2>
                            <div id="advancedSettings" class="accordion-collapse collapse" data-bs-parent="#relationshipAdvanced">
                                <div class="accordion-body">
                                    <!-- Visual Style Section -->
                                    <div class="row mb-3">
                                        <div class="col-6">
                                            <div class="mb-3">
                                                <label for="modalRelationshipColor" class="form-label">Color</label>
                                                <input type="color" class="form-control form-control-color" id="modalRelationshipColor" value="#6c757d">
                                            </div>
                                        </div>
                                        <div class="col-6">
                                            <div class="mb-3">
                                                <label for="modalRelationshipWidth" class="form-label">Width</label>
                                                <input type="range" class="form-range" id="modalRelationshipWidth" min="1" max="8" value="2">
                                                <div class="text-center"><small id="widthValue">2px</small></div>
                                            </div>
                                        </div>
                                    </div>

                                    <!-- Connection Type Section -->
                                    <div class="mb-3">
                                        <label for="modalConnectionType" class="form-label">Connection Type</label>
                                        <select class="form-select" id="modalConnectionType">
                                            <option value="curved">Curved (Default)</option>
                                            <option value="straight">Straight Line</option>
                                            <option value="orthogonal">Orthogonal (Right Angles)</option>
                                            <option value="bezier">Smooth Bezier</option>
                                            <option value="stepped">Stepped Lines</option>
                                            <option value="arc">Arc Connection</option>
                                        </select>
                                        <div class="form-text">Choose how the connection line is routed between elements</div>
                                    </div>

                                    <!-- Line Style Section -->
                                    <div class="row mb-3">
                                        <div class="col-6">
                                            <div class="mb-3">
                                                <label for="modalRelationshipLineStyle" class="form-label">Line Style</label>
                                                <select class="form-select" id="modalRelationshipLineStyle">
                                                    <option value="solid">Solid</option>
                                                    <option value="dashed">Dashed</option>
                                                    <option value="dotted">Dotted</option>
                                                    <option value="dashdot">Dash-Dot</option>
                                                    <option value="longdash">Long Dash</option>
                                                </select>
                                            </div>
                                        </div>
                                        <div class="col-6">
                                            <div class="mb-3">
                                                <label for="modalRelationshipPattern" class="form-label">Pattern</label>
                                                <select class="form-select" id="modalRelationshipPattern">
                                                    <option value="none">None</option>
                                                    <option value="wave">Wave</option>
                                                    <option value="zigzag">Zigzag</option>
                                                </select>
                                            </div>
                                        </div>
                                    </div>

                                    <!-- Arrow Styles Section -->
                                    <div class="row mb-3">
                                        <div class="col-6">
                                            <div class="mb-3">
                                                <label for="modalRelationshipStartArrow" class="form-label">Start Arrow</label>
                                                <select class="form-select" id="modalRelationshipStartArrow">
                                                    <option value="none">None</option>
                                                    <option value="arrow">Arrow</option>
                                                    <option value="diamond">Diamond</option>
                                                    <option value="circle">Circle</option>
                                                    <option value="square">Square</option>
                                                    <option value="open">Open Arrow</option>
                                                    <option value="filled">Filled Arrow</option>
                                                </select>
                                            </div>
                                        </div>
                                        <div class="col-6">
                                            <div class="mb-3">
                                                <label for="modalRelationshipArrowStyle" class="form-label">End Arrow</label>
                                                <select class="form-select" id="modalRelationshipArrowStyle">
                                                    <option value="arrow">Arrow</option>
                                                    <option value="diamond">Diamond</option>
                                                    <option value="circle">Circle</option>
                                                    <option value="square">Square</option>
                                                    <option value="open">Open Arrow</option>
                                                    <option value="filled">Filled Arrow</option>
                                                    <option value="double">Double Arrow</option>
                                                    <option value="none">None</option>
                                                </select>
                                            </div>
                                        </div>
                                    </div>

                                    <!-- Connection Points Section -->
                                    <div class="row mb-3">
                                        <div class="col-6">
                                            <div class="mb-3">
                                                <label for="modalSourceAnchor" class="form-label">Source Anchor</label>
                                                <select class="form-select" id="modalSourceAnchor">
                                                    <option value="auto">Auto</option>
                                                    <option value="top">Top</option>
                                                    <option value="right">Right</option>
                                                    <option value="bottom">Bottom</option>
                                                    <option value="left">Left</option>
                                                    <option value="center">Center</option>
                                                </select>
                                            </div>
                                        </div>
                                        <div class="col-6">
                                            <div class="mb-3">
                                                <label for="modalTargetAnchor" class="form-label">Target Anchor</label>
                                                <select class="form-select" id="modalTargetAnchor">
                                                    <option value="auto">Auto</option>
                                                    <option value="top">Top</option>
                                                    <option value="right">Right</option>
                                                    <option value="bottom">Bottom</option>
                                                    <option value="left">Left</option>
                                                    <option value="center">Center</option>
                                                </select>
                                            </div>
                                        </div>
                                    </div>

                                    <!-- Visual Effects Section -->
                                    <div class="row mb-3">
                                        <div class="col-6">
                                            <div class="mb-3">
                                                <label for="modalRelationshipOpacity" class="form-label">Opacity</label>
                                                <input type="range" class="form-range" id="modalRelationshipOpacity" min="0.1" max="1" step="0.1" value="1">
                                                <div class="text-center"><small id="opacityValue">100%</small></div>
                                            </div>
                                        </div>
                                        <div class="col-6">
                                            <div class="mb-3">
