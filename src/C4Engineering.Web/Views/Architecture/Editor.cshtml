@{
    ViewData["Title"] = "Diagram Editor";
}

<!-- Editor Header -->
<div class="d-flex justify-content-between align-items-center mb-3">
    <div class="d-flex align-items-center">
        <a href="@Url.Action("Index", "Architecture")" class="btn btn-outline-secondary me-3">
            <i class="bi bi-arrow-left"></i> Back
        </a>
        <div>
            <h1 class="h4 mb-0" id="diagramTitle">Untitled Diagram</h1>
            <small class="text-muted" id="diagramMeta">C4 Context Diagram</small>
        </div>
    </div>
    <div class="btn-toolbar" role="toolbar">
        <div class="btn-group me-2" role="group">
            <button type="button" class="btn btn-outline-primary" id="saveBtn">
                <i class="bi bi-save"></i> Save
            </button>
            <button type="button" class="btn btn-outline-secondary" id="exportBtn" data-bs-toggle="dropdown">
                <i class="bi bi-download"></i> Export
            </button>
            <ul class="dropdown-menu">
                <li><a class="dropdown-item" href="#" id="exportPng">Export as PNG</a></li>
                <li><a class="dropdown-item" href="#" id="exportSvg">Export as SVG</a></li>
                <li><a class="dropdown-item" href="#" id="exportPdf">Export as PDF</a></li>
            </ul>
        </div>
        <div class="btn-group me-2" role="group">
            <button type="button" class="btn btn-outline-info" id="shareBtn">
                <i class="bi bi-share"></i> Share
            </button>
            <button type="button" class="btn btn-outline-success" id="configurePipelineBtn">
                <i class="bi bi-gear"></i> Configure Pipeline
            </button>
        </div>
    </div>
</div>

<!-- Editor Workspace -->
<div class="row h-100" style="min-height: 80vh;">
    <!-- Component Palette -->
    <div class="col-md-2">
        <div class="card h-100">
            <div class="card-header">
                <h6 class="card-title mb-0">Components</h6>
            </div>
            <div class="card-body p-2" id="componentPalette">
                <div class="accordion accordion-flush" id="paletteAccordion">
                    <!-- People & Systems -->
                    <div class="accordion-item">
                        <h2 class="accordion-header">
                            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#peopleCollapse">
                                People & Systems
                            </button>
                        </h2>
                        <div id="peopleCollapse" class="accordion-collapse collapse" data-bs-parent="#paletteAccordion">
                            <div class="accordion-body p-2">
                                <div class="palette-item" data-type="person" draggable="true">
                                    <i class="bi bi-person-circle"></i> Person
                                </div>
                                <div class="palette-item" data-type="system" draggable="true">
                                    <i class="bi bi-box-seam"></i> Software System
                                </div>
                                <div class="palette-item" data-type="external-system" draggable="true">
                                    <i class="bi bi-cloud"></i> External System
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <!-- Containers -->
                    <div class="accordion-item">
                        <h2 class="accordion-header">
                            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#containersCollapse">
                                Containers
                            </button>
                        </h2>
                        <div id="containersCollapse" class="accordion-collapse collapse" data-bs-parent="#paletteAccordion">
                            <div class="accordion-body p-2">
                                <div class="palette-item" data-type="web-app" draggable="true">
                                    <i class="bi bi-browser-chrome"></i> Web Application
                                </div>
                                <div class="palette-item" data-type="mobile-app" draggable="true">
                                    <i class="bi bi-phone"></i> Mobile App
                                </div>
                                <div class="palette-item" data-type="api" draggable="true">
                                    <i class="bi bi-cloud-arrow-up"></i> API
                                </div>
                                <div class="palette-item" data-type="database" draggable="true">
                                    <i class="bi bi-database"></i> Database
                                </div>
                                <div class="palette-item" data-type="message-queue" draggable="true">
                                    <i class="bi bi-envelope-plus"></i> Message Queue
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <!-- Components -->
                    <div class="accordion-item">
                        <h2 class="accordion-header">
                            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#componentsCollapse">
                                Components
                            </button>
                        </h2>
                        <div id="componentsCollapse" class="accordion-collapse collapse" data-bs-parent="#paletteAccordion">
                            <div class="accordion-body p-2">
                                <div class="palette-item" data-type="controller" draggable="true">
                                    <i class="bi bi-cpu"></i> Controller
                                </div>
                                <div class="palette-item" data-type="service" draggable="true">
                                    <i class="bi bi-gear"></i> Service
                                </div>
                                <div class="palette-item" data-type="repository" draggable="true">
                                    <i class="bi bi-archive"></i> Repository
                                </div>
                                <div class="palette-item" data-type="component" draggable="true">
                                    <i class="bi bi-puzzle"></i> Component
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <!-- Diagram Canvas -->
    <div class="col-md-8">
        <div class="card h-100">
            <div class="card-header d-flex justify-content-between align-items-center">
                <div class="btn-group btn-group-sm" role="group">
                    <button type="button" class="btn btn-outline-secondary" id="zoomOut">
                        <i class="bi bi-zoom-out"></i>
                    </button>
                    <button type="button" class="btn btn-outline-secondary" id="zoomReset">100%</button>
                    <button type="button" class="btn btn-outline-secondary" id="zoomIn">
                        <i class="bi bi-zoom-in"></i>
                    </button>
                </div>
                <div class="form-check form-switch">
                    <input class="form-check-input" type="checkbox" id="snapToGrid" checked>
                    <label class="form-check-label" for="snapToGrid">Snap to Grid</label>
                </div>
            </div>
            <div class="card-body p-0 position-relative" id="diagramContainer">
                <!-- SVG will be inserted here by D3.js -->
                <div id="selectionInfo" class="position-absolute top-0 start-0 m-2 p-2 bg-light border rounded" style="display: none;">
                    <small class="text-muted">Selected: <span id="selectedElementName"></span></small>
                </div>
            </div>
        </div>
    </div>
    
    <!-- Properties Panel -->
    <div class="col-md-2">
        <div class="card h-100">
            <div class="card-header">
                <h6 class="card-title mb-0">Properties</h6>
            </div>
            <div class="card-body" id="propertiesPanel">
                <div id="noSelection" class="text-center text-muted py-4">
                    <i class="bi bi-cursor display-4"></i>
                    <p class="mt-2">Select an element to edit properties</p>
                </div>
                
                <div id="elementProperties" style="display: none;">
                    <form id="propertiesForm">
                        <div class="mb-3">
                            <label for="elementName" class="form-label">Name</label>
                            <input type="text" class="form-control form-control-sm" id="elementName">
                        </div>
                        <div class="mb-3">
                            <label for="elementDescription" class="form-label">Description</label>
                            <textarea class="form-control form-control-sm" id="elementDescription" rows="3"></textarea>
                        </div>
                        <div class="mb-3">
                            <label for="elementTechnology" class="form-label">Technology</label>
                            <input type="text" class="form-control form-control-sm" id="elementTechnology">
                        </div>
                        <div class="mb-3">
                            <label for="elementColor" class="form-label">Color</label>
                            <input type="color" class="form-control form-control-color form-control-sm" id="elementColor">
                        </div>
                        <div class="mb-3" id="containerConfig" style="display: none;">
                            <label class="form-label">Container Options</label>
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" id="enablePipeline">
                                <label class="form-check-label" for="enablePipeline">
                                    Enable Pipeline
                                </label>
                            </div>
                        </div>
                        <button type="button" class="btn btn-danger btn-sm w-100" id="deleteElement">
                            <i class="bi bi-trash"></i> Delete Element
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Collaboration Status -->
<div class="position-fixed bottom-0 start-0 p-3">
    <div class="toast-container">
        <div id="collaborationStatus" class="toast" role="status" aria-live="polite" aria-atomic="true">
            <div class="toast-header">
                <i class="bi bi-people-fill text-success me-2"></i>
                <strong class="me-auto">Collaboration</strong>
                <button type="button" class="btn-close" data-bs-dismiss="toast"></button>
            </div>
            <div class="toast-body">
                <div id="activeUsers">
                    <!-- Active users will be shown here -->
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Configure Pipeline Modal -->
<div class="modal fade" id="configurePipelineModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Configure Pipeline</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <div class="alert alert-info">
                    <i class="bi bi-info-circle"></i>
                    Configure build and deployment pipeline for selected container elements.
                </div>
                <div id="pipelineConfig">
                    <!-- Pipeline configuration will be loaded here -->
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-success" id="savePipelineConfig">Save Configuration</button>
            </div>
        </div>
    </div>
</div>

<!-- Share Modal -->
<div class="modal fade" id="shareModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Share Diagram</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <div class="mb-3">
                    <label for="shareUrl" class="form-label">Share URL</label>
                    <div class="input-group">
                        <input type="text" class="form-control" id="shareUrl" readonly>
                        <button class="btn btn-outline-secondary" type="button" id="copyUrl">
                            <i class="bi bi-clipboard"></i>
                        </button>
                    </div>
                </div>
                <div class="mb-3">
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" id="allowEditing">
                        <label class="form-check-label" for="allowEditing">
                            Allow collaborative editing
                        </label>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script type="module" src="~/js/diagram-editor.js"></script>
    <script src="~/lib/signalr/signalr.min.js"></script>
}

@section Styles {
    <link rel="stylesheet" href="~/css/diagram-editor.css">
}