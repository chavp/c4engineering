@{
    ViewData["Title"] = "Architecture Diagrams";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="h2">Architecture Diagrams</h1>
    <div>
        <button type="button" class="btn btn-success" id="createDiagramBtn">
            <i class="bi bi-plus-circle"></i> Create Diagram
        </button>
        <button type="button" class="btn btn-outline-info" id="importFromServiceBtn">
            <i class="bi bi-upload"></i> From Service
        </button>
    </div>
</div>

<!-- C4 Level Navigation -->
<div class="card mb-4">
    <div class="card-body">
        <div class="row align-items-center">
            <div class="col-md-8">
                <h6 class="mb-2">C4 Model Levels</h6>
                <div class="btn-group" role="group" aria-label="C4 Model Levels">
                    <input type="radio" class="btn-check" name="c4Level" id="contextLevel" value="Context" checked>
                    <label class="btn btn-outline-primary" for="contextLevel">
                        <i class="bi bi-globe"></i> Context
                    </label>
                    
                    <input type="radio" class="btn-check" name="c4Level" id="containerLevel" value="Container">
                    <label class="btn btn-outline-primary" for="containerLevel">
                        <i class="bi bi-box"></i> Container
                    </label>
                    
                    <input type="radio" class="btn-check" name="c4Level" id="componentLevel" value="Component">
                    <label class="btn btn-outline-primary" for="componentLevel">
                        <i class="bi bi-puzzle"></i> Component
                    </label>
                    
                    <input type="radio" class="btn-check" name="c4Level" id="codeLevel" value="Code">
                    <label class="btn btn-outline-primary" for="codeLevel">
                        <i class="bi bi-code"></i> Code
                    </label>
                </div>
            </div>
            <div class="col-md-4 text-end">
                <div class="form-check form-switch">
                    <input class="form-check-input" type="checkbox" id="realTimeMode">
                    <label class="form-check-label" for="realTimeMode">
                        Real-time Collaboration
                    </label>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Diagrams Grid -->
<div id="diagramsContainer">
    <div id="diagramsGrid" class="row">
        <!-- Diagrams will be loaded here by JavaScript -->
    </div>
    
    <!-- Loading state -->
    <div id="loadingSpinner" class="text-center py-5">
        <div class="spinner-border text-primary" role="status">
            <span class="visually-hidden">Loading diagrams...</span>
        </div>
    </div>
    
    <!-- Empty state -->
    <div id="emptyState" class="text-center py-5" style="display: none;">
        <div class="mb-3">
            <i class="bi bi-diagram-3 display-1 text-muted"></i>
        </div>
        <h5 class="text-muted">No diagrams found</h5>
        <p class="text-muted">Create your first C4 architecture diagram to visualize your system.</p>
        <button type="button" class="btn btn-primary" id="createFirstDiagramBtn">
            Create Your First Diagram
        </button>
    </div>
</div>

<!-- Create Diagram Modal -->
<div class="modal fade" id="createDiagramModal" tabindex="-1" aria-labelledby="createDiagramModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="createDiagramModalLabel">Create New Diagram</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form id="createDiagramForm">
                <div class="modal-body">
                    <div class="mb-3">
                        <label for="diagramName" class="form-label">Diagram Name *</label>
                        <input type="text" class="form-control" id="diagramName" name="name" required>
                    </div>
                    <div class="mb-3">
                        <label for="diagramType" class="form-label">C4 Level *</label>
                        <select class="form-select" id="diagramType" name="type" required>
                            <option value="Context">Context - System landscape</option>
                            <option value="Container">Container - System breakdown</option>
                            <option value="Component">Component - Container internals</option>
                            <option value="Code">Code - Implementation details</option>
                        </select>
                    </div>
                    <div class="mb-3">
                        <label for="diagramSystem" class="form-label">System</label>
                        <select class="form-select" id="diagramSystem" name="system">
                            <option value="">Select system...</option>
                            <!-- Will be populated by JavaScript -->
                        </select>
                    </div>
                    <div class="mb-3">
                        <label for="diagramDescription" class="form-label">Description</label>
                        <textarea class="form-control" id="diagramDescription" name="description" rows="3"></textarea>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-success">Create Diagram</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Import from Service Modal -->
<div class="modal fade" id="importServiceModal" tabindex="-1" aria-labelledby="importServiceModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="importServiceModalLabel">Generate Diagram from Service</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form id="importServiceForm">
                <div class="modal-body">
                    <div class="mb-3">
                        <label for="sourceService" class="form-label">Source Service *</label>
                        <select class="form-select" id="sourceService" name="serviceId" required>
                            <option value="">Select service...</option>
                            <!-- Will be populated by JavaScript -->
                        </select>
                    </div>
                    <div class="mb-3">
                        <label for="generatedDiagramType" class="form-label">Generate As *</label>
                        <select class="form-select" id="generatedDiagramType" name="type" required>
                            <option value="Context">Context Diagram - Show service relationships</option>
                            <option value="Container">Container Diagram - Show service internals</option>
                        </select>
                    </div>
                    <div class="mb-3">
                        <label for="generatedDiagramName" class="form-label">Diagram Name</label>
                        <input type="text" class="form-control" id="generatedDiagramName" name="name" placeholder="Will be auto-generated from service name">
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-success">Generate Diagram</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Toast Container -->
<div class="toast-container position-fixed bottom-0 end-0 p-3">
    <div id="successToast" class="toast align-items-center text-white bg-success border-0" role="alert">
        <div class="d-flex">
            <div class="toast-body">Diagram created successfully!</div>
            <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast"></button>
        </div>
    </div>
    <div id="errorToast" class="toast align-items-center text-white bg-danger border-0" role="alert">
        <div class="d-flex">
            <div class="toast-body">
                <span id="errorMessage">An error occurred.</span>
            </div>
            <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast"></button>
        </div>
    </div>
</div>

@section Scripts {
    <script type="module" src="~/js/architecture-index.js"></script>
}