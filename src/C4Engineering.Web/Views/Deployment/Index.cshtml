@{
    ViewData["Title"] = "Deployments";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="h2">Docker Desktop Deployments</h1>
    <div>
        <button type="button" class="btn btn-success" id="deployServiceBtn">
            <i class="bi bi-play-circle"></i> Deploy Service
        </button>
        <button type="button" class="btn btn-outline-info" id="dockerStatusBtn">
            <i class="bi bi-info-circle"></i> Docker Status
        </button>
    </div>
</div>

<!-- Docker Status Card -->
<div class="card mb-4">
    <div class="card-body">
        <div class="row align-items-center">
            <div class="col-md-8">
                <div class="d-flex align-items-center">
                    <i class="bi bi-circle-fill text-success me-2" id="dockerStatusIcon"></i>
                    <div>
                        <h6 class="mb-1" id="dockerStatusText">Docker Desktop Connected</h6>
                        <small class="text-muted" id="dockerStatusDetails">Version 4.15.0, 8 containers running</small>
                    </div>
                </div>
            </div>
            <div class="col-md-4 text-end">
                <div class="btn-group btn-group-sm" role="group">
                    <button type="button" class="btn btn-outline-secondary" id="refreshDockerBtn">
                        <i class="bi bi-arrow-clockwise"></i> Refresh
                    </button>
                    <button type="button" class="btn btn-outline-primary" id="dockerDesktopBtn">
                        <i class="bi bi-box-arrow-up-right"></i> Open Docker Desktop
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Deployment Filters -->
<div class="card mb-4">
    <div class="card-body">
        <form id="deploymentFilters" class="row g-3">
            <div class="col-md-3">
                <label for="serviceFilter" class="form-label">Service</label>
                <select id="serviceFilter" class="form-select">
                    <option value="">All Services</option>
                </select>
            </div>
            <div class="col-md-3">
                <label for="statusFilter" class="form-label">Status</label>
                <select id="statusFilter" class="form-select">
                    <option value="">All Statuses</option>
                    <option value="running">Running</option>
                    <option value="stopped">Stopped</option>
                    <option value="error">Error</option>
                    <option value="starting">Starting</option>
                </select>
            </div>
            <div class="col-md-3">
                <label for="searchFilter" class="form-label">Search</label>
                <input type="text" id="searchFilter" class="form-control" placeholder="Search deployments...">
            </div>
            <div class="col-md-3 d-flex align-items-end">
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" id="autoRefresh" checked>
                    <label class="form-check-label" for="autoRefresh">
                        Auto-refresh
                    </label>
                </div>
            </div>
        </form>
    </div>
</div>

<!-- Deployments Grid -->
<div id="deploymentsContainer">
    <div id="deploymentsGrid" class="row">
        <!-- Deployment cards will be loaded here by JavaScript -->
    </div>
    
    <!-- Loading state -->
    <div id="loadingSpinner" class="text-center py-5">
        <div class="spinner-border text-primary" role="status">
            <span class="visually-hidden">Loading deployments...</span>
        </div>
    </div>
    
    <!-- Empty state -->
    <div id="emptyState" class="text-center py-5" style="display: none;">
        <div class="mb-3">
            <i class="bi bi-box display-1 text-muted"></i>
        </div>
        <h5 class="text-muted">No deployments found</h5>
        <p class="text-muted">Deploy your first service to Docker Desktop to get started.</p>
        <button type="button" class="btn btn-primary" id="deployFirstServiceBtn">
            Deploy Your First Service
        </button>
    </div>
</div>

<!-- Deploy Service Modal -->
<div class="modal fade" id="deployServiceModal" tabindex="-1" aria-labelledby="deployServiceModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deployServiceModalLabel">Deploy Service</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form id="deployServiceForm">
                <div class="modal-body">
                    <div class="mb-3">
                        <label for="deployService" class="form-label">Service *</label>
                        <select class="form-select" id="deployService" name="serviceId" required>
                            <option value="">Select service...</option>
                        </select>
                    </div>
                    <div class="mb-3">
                        <label for="deployPipeline" class="form-label">Pipeline</label>
                        <select class="form-select" id="deployPipeline" name="pipelineId">
                            <option value="">Select pipeline (optional)...</option>
                        </select>
                        <div class="form-text">Select a pipeline to build and deploy, or deploy directly from existing image.</div>
                    </div>
                    <div class="mb-3">
                        <label for="deployImage" class="form-label">Docker Image</label>
                        <input type="text" class="form-control" id="deployImage" name="imageName" placeholder="my-app:latest">
                        <div class="form-text">Specify image name if deploying without pipeline.</div>
                    </div>
                    <div class="mb-3">
                        <label for="deployContainerName" class="form-label">Container Name</label>
                        <input type="text" class="form-control" id="deployContainerName" name="containerName" placeholder="Will be auto-generated">
                    </div>
                    
                    <!-- Port Configuration -->
                    <div class="mb-3">
                        <label class="form-label">Port Mapping</label>
                        <div id="portMappings">
                            <div class="input-group mb-2">
                                <span class="input-group-text">Host</span>
                                <input type="number" class="form-control" placeholder="8080" name="hostPort[]">
                                <span class="input-group-text">â†’ Container</span>
                                <input type="number" class="form-control" placeholder="80" name="containerPort[]">
                                <button type="button" class="btn btn-outline-success" id="addPortBtn">
                                    <i class="bi bi-plus"></i>
                                </button>
                            </div>
                        </div>
                    </div>
                    
                    <!-- Environment Variables -->
                    <div class="mb-3">
                        <label class="form-label">Environment Variables</label>
                        <div id="environmentVariables">
                            <div class="input-group mb-2">
                                <input type="text" class="form-control" placeholder="Variable name" name="envName[]">
                                <span class="input-group-text">=</span>
                                <input type="text" class="form-control" placeholder="Value" name="envValue[]">
                                <button type="button" class="btn btn-outline-success" id="addEnvBtn">
                                    <i class="bi bi-plus"></i>
                                </button>
                            </div>
                        </div>
                    </div>
                    
                    <!-- Health Check -->
                    <div class="mb-3">
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" id="enableHealthCheck">
                            <label class="form-check-label" for="enableHealthCheck">
                                Enable Health Check
                            </label>
                        </div>
                        <div id="healthCheckConfig" class="mt-2" style="display: none;">
                            <div class="row">
                                <div class="col-md-6">
                                    <input type="url" class="form-control" id="healthCheckUrl" placeholder="http://localhost:8080/health">
                                </div>
                                <div class="col-md-6">
                                    <input type="number" class="form-control" id="healthCheckInterval" placeholder="30" min="5">
                                    <div class="form-text">Interval in seconds</div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-success">
                        <i class="bi bi-play-circle"></i> Deploy
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Container Details Modal -->
<div class="modal fade" id="containerDetailsModal" tabindex="-1" aria-labelledby="containerDetailsModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-xl">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="containerDetailsModalLabel">Container Details</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-md-8">
                        <!-- Logs -->
                        <div class="mb-4">
                            <div class="d-flex justify-content-between align-items-center mb-2">
                                <h6>Container Logs</h6>
                                <div class="btn-group btn-group-sm" role="group">
                                    <button type="button" class="btn btn-outline-secondary" id="refreshLogsBtn">
                                        <i class="bi bi-arrow-clockwise"></i> Refresh
                                    </button>
                                    <button type="button" class="btn btn-outline-secondary" id="clearLogsBtn">
                                        <i class="bi bi-trash"></i> Clear
                                    </button>
                                    <button type="button" class="btn btn-outline-secondary" id="downloadLogsBtn">
                                        <i class="bi bi-download"></i> Download
                                    </button>
                                </div>
                            </div>
                            <div class="bg-dark text-light p-3 rounded" style="height: 400px; overflow-y: auto; font-family: 'Courier New', monospace;">
                                <div id="containerLogs">
                                    <!-- Logs will be streamed here -->
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <!-- Container Info -->
                        <div class="card mb-3">
                            <div class="card-header">
                                <h6 class="card-title mb-0">Container Information</h6>
                            </div>
                            <div class="card-body" id="containerInfo">
                                <!-- Container details will be displayed here -->
                            </div>
                        </div>
                        
                        <!-- Resource Usage -->
                        <div class="card mb-3">
                            <div class="card-header">
                                <h6 class="card-title mb-0">Resource Usage</h6>
                            </div>
                            <div class="card-body" id="resourceUsage">
                                <!-- Resource usage charts will be displayed here -->
                            </div>
                        </div>
                        
                        <!-- Actions -->
                        <div class="card">
                            <div class="card-header">
                                <h6 class="card-title mb-0">Actions</h6>
                            </div>
                            <div class="card-body">
                                <div class="d-grid gap-2">
                                    <button type="button" class="btn btn-outline-warning" id="restartContainerBtn">
                                        <i class="bi bi-arrow-clockwise"></i> Restart
                                    </button>
                                    <button type="button" class="btn btn-outline-secondary" id="stopContainerBtn">
                                        <i class="bi bi-stop"></i> Stop
                                    </button>
                                    <button type="button" class="btn btn-outline-danger" id="removeContainerBtn">
                                        <i class="bi bi-trash"></i> Remove
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

<!-- Deployment Card Template (hidden) -->
<template id="deploymentCardTemplate">
    <div class="col-md-6 col-lg-4 mb-4">
        <div class="card h-100 deployment-card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <div class="d-flex align-items-center">
                    <i class="bi bi-box-seam me-2"></i>
                    <span class="container-name fw-bold">Container Name</span>
                </div>
                <span class="badge container-status-badge">Running</span>
            </div>
            <div class="card-body">
                <div class="mb-2">
                    <small class="text-muted">Service:</small>
                    <div class="service-name">Service Name</div>
                </div>
                <div class="mb-2">
                    <small class="text-muted">Image:</small>
                    <div class="image-name text-break">image:tag</div>
                </div>
                <div class="mb-2">
                    <small class="text-muted">Ports:</small>
                    <div class="port-mappings">
                        <!-- Port mappings will be shown here -->
                    </div>
                </div>
                <div class="mb-2">
                    <small class="text-muted">Uptime:</small>
                    <div class="uptime">-</div>
                </div>
                <div class="mb-3">
                    <small class="text-muted">Health:</small>
                    <div class="health-status">
                        <i class="bi bi-circle-fill text-success"></i> Healthy
                    </div>
                </div>
            </div>
            <div class="card-footer">
                <div class="btn-group w-100" role="group">
                    <button type="button" class="btn btn-outline-primary btn-sm view-details-btn">
                        <i class="bi bi-eye"></i> Details
                    </button>
                    <button type="button" class="btn btn-outline-secondary btn-sm restart-btn">
                        <i class="bi bi-arrow-clockwise"></i> Restart
                    </button>
                    <button type="button" class="btn btn-outline-danger btn-sm stop-btn">
                        <i class="bi bi-stop"></i> Stop
                    </button>
                </div>
            </div>
        </div>
    </div>
</template>

<!-- Toast Container -->
<div class="toast-container position-fixed bottom-0 end-0 p-3">
    <div id="successToast" class="toast align-items-center text-white bg-success border-0" role="alert">
        <div class="d-flex">
            <div class="toast-body">Operation completed successfully!</div>
            <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast"></button>
        </div>
    </div>
    <div id="errorToast" class="toast align-items-center text-white bg-danger border-0" role="alert">
        <div class="d-flex">
            <div class="toast-body">
                <span id="errorMessage">An error occurred.</span>
            </div>
            <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast"></button>
        </div>
    </div>
</div>

@section Scripts {
    <script type="module" src="~/js/deployment-index.js"></script>
    <script src="~/lib/signalr/signalr.min.js"></script>
}